#include <iostream>
#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <math.h>
using namespace std;
/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char** argv) {
	int task_num;
	cout << "Enter the task number: " << endl;
	cin >> task_num;
    
	if(task_num<1&&task_num>10)
	{
		cout << "Error! You have to enter more than 0 and less than 10. " << endl;
		cin >> task_num;
	}
	else if (task_num == 1)
	{
		int i;
	    int a[20];	
	
	    for(i=0;i<20;i++)
	    {
		    a[i]=rand()%51+50;
		
	    }
	
	    for(i=0;i<20;i++)
	    {
		    cout << a[i] << endl;
	    }
	}
	else if (task_num == 2)
	{
		int i;
	    int a[8]={20,18,15,12,8,7,5,1};
	    int b[8]={0,3,5,7,11,16,19,21};
	
	    for(i=0;i<8;i++)
	    cout << a[i] << " ";
	    
	    cout << endl;
	   
	    for(i=0;i<8;i++)
	    cout << b[i] << " ";
	    
	    cout << endl;	
	}
	else if (task_num == 3)
	{
		const int size = 10;
        int arr[size], min, max, temp;
 
    
        cout << "Dannyi massiv: ";
        for (int i = 0; i < size; i++)
        {
            arr[i] = 1 + rand() % 99;
            if (!i)
            {
                max = i;
                min = i;
            }
 
            if (arr[i] > arr[max])
                max = i;
            if (arr[i] < arr[min])
                min = i;
 
            cout << arr[i] << "  ";
        }
 
        cout << endl;
        temp = arr[0];          
        arr[0] = arr[max];
        arr[max] = temp;
 
        cout << "Poluchennyi massiv: ";
        for (int i = 0; i < size; i++)
            cout << arr[i] << "  ";
        cout << endl;
	}
	else if (task_num == 4)
	{
		int i;
        float a[15];
        int count=0;
    
        cout << "Vvedite 15 veshestvennyh elementov massiva: " << endl;
        for(i=0;i<15;i++)
        {
    	    cin >> a[i];
	    }
	
	    for(i=1;i<15;i++)
	    {
		    if(a[i]>a[0])
		    count++;
	    }
	    cout << "Kolichestvo elementov bol'she pervogo elementa ravno: " << count << endl;	
	}
	else if (task_num == 5)
	{
		int i;
	    int a[15];
	    int Sum, Difference;
	    int max, min;	
	
	
	    for(i=0;i<15;i++)
	    {
		    a[i]=1+rand()%99;
	    }
	    for(i=0;i<15;i++)
	    {
		    cout << a[i] << endl;
	    }
	    max=a[0];
	    min=a[0];
	    for(i=1;i<15;i++)
	    {
		    if(a[i]>max)
		        max=a[i];
	    	if(a[i]<min)
		        min=a[i];
	    }
	    Sum=max+min;
	    Difference=max-min;
	    cout << "Summa i raznost' maksimal'nogo i minimal'nogo elementov massiva ravny: " << Sum << " " << Difference << endl;
	}
	else if (task_num == 6)
	{
		int i;
	    int a[17];
	    int S=0;
	
		for(i=0;i<17;i++)
        {
		    a[i]=1+rand()%99;
	    }
	
	    cout << "Massiv do zameny " << endl;
	    for(i=0;i<17;i++)
	    {
		    cout << a[i] << endl;
	    }
	
	    for(i=0;i<17;i++)
	    {
		    if (a[i]%2!=0)
		    S+=a[i];
	    }
	
	    for(i=0;i<17;i++)
	    {
		    if (a[i]%3==0)
		    a[i]=S;
	    }
	
	    cout << "Massiv posle zameny " << endl;
	    for(i=0;i<17;i++)
	    {
		    cout << a[i] << endl;
        }
	}
	else if (task_num == 7)
	{
		int i;
	    int a[15];
	    int countnegative=0;
	    int count=0;
	    int P=1;
	
	    for(i=0;i<15;i++)
        {
	        a[i]=-10+rand()%20;
        }
        cout << "Massiv iz 15 elementov " << endl;
		for(i=0;i<15;i++)
	    {
		    cout << a[i] << endl;
	    }
	    for(i=0;i<15;i++)
	    {
		    if(a[i]<0)
		        countnegative++;
	    }
	    for(i=0;i<15;i++)
	    {
		    if(a[i]>0)
		        P*=a[i];
	    }
	    for(i=0;i<15;i++)
        {
	        if(a[i]==0)
	         	count++;
        }
	    cout << "Kolichestvo otricatel'nyh elementov ravno: " << countnegative << endl;
	    cout << "Prozvedenie polozhitel'nyh elementov ravno: " << P << endl;
	    cout << "Kolichestvo nulevyh elementov ravno: " << count << endl;
	}
	else if (task_num == 8)
	{
		int i;
	    int a[19];
	    int S=0;
	    int count = 0;
	
	    for(i=0;i<19;i++)
        {
	        a[i]=-10+rand()%20;
        }
        cout << "Massiv iz 19 elementov " << endl;
        for(i=0;i<19;i++)
        {
	        cout << a[i] << endl;
        }
        for(i=0;i<19;i++)
        {
        	if (a[i]>=0)	
		        S+=a[i];
	        else
	        	break;	    
        }
        for(i=0;i<19;i++)
        {
        	if(a[i]<0)
	        	count++;
	    }
        if (count==0)
        {
	        cout << "Net otricatel'nyh chisel v massive" << endl;
        }
		  
        cout << "Summa elementov do 1 otricatel'nogo elementa ravna: " << S << endl;
    }
    else if (task_num == 9)
    {
       	int i;
	    int max, min;
	    float temp;
	    float a[12]={1.2,1.5,3.3,4.1,2.2,2,5.1,3.2,9.1,5.5,11.2,12.3};
	
	    cout << "Dannyi massiv: ";
	    for (int i = 0; i < 12; i++)
        {
            if (!i)
            {
                max = i;
                min = i;
            }
 
            if (a[i] > a[max])
                max = i;
            if (a[i] < a[min])
                min = i;        
            
            cout << a[i] << "  ";
        }
     
        cout << endl;
        temp = a[11];          
        a[11] = a[min]*3;
        a[min] = temp;
 
        cout << "Novyi massiv: ";
        for (int i = 0; i < 12; i++)
            cout << a[i] << "  ";
        cout << endl;
		}
	else if (task_num == 10)
	{
		int i;
	    float a[15]={2.5,3.4,4.1,5.2,6.7,7.1,8.2,9.3,10,11.2,12.3,14.5,15.9,16,20.1};
	
	    for(i=14;i>=0;i--)
	    {
		    cout << a[i] << " ";
	    }
	    cout << endl;
	}
    
	return 0;
}
